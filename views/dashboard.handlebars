<section class="container">
  <h2 class="fw-bold">Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" placeholder="Enter Post Title" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Email</label>
      <input id="post-url" placeholder="JohnDoe@mail.com" name="post-url" />
    </div>
    <button type="submit" class="btn mb-6 bg-light">Create</button>
  </form>
</section>


<section class="container mt-3 justify-center bg-secondary">

  {{#if posts.length}}
  <section class="mt-5">
    <h2 class="fw-bold">Your Posts</h2>
    <div class=" container py-2 align-items bg-secondary">
      <div>
        {{#each posts as |post|}}
        <div>



          <div class="card mb-4 mx-auto" style="width: 80%">
            <div class="container row mx-auto" style="width: 80%">
              <div class="card-header align-center col-md-6 bg-secondary opacity-50">
                <h5 class="card-title text-black fw-bold">{{title}}</h5>
              </div>

              <div class="container col-md-4 align-center mt-4">
                <a href="/post/{{id}}" class="btn btn-primary fw-bold">View Post</a>
                <p class="text-muted fw-bold mt-2"> or </p>
                <a href="mailto:{{post_url}}" target="_blank" class="btn btn-primary fw-bold">Reach Out</a>
                <span class="text-muted fw-bold">({{format_url post_url}})</span>
              </div>
              <div class="col-md-4 py-1">
                <p class="card-text"><small class="text-muted fw-bold"><i class="fa-regular fa-heart"></i>
                    {{vote_count}} {{format_plural
                    "Like" vote_count}} <i class="far fa-user"></i> {{user.username}} <span class="px-1">
                      {{comments.length}}
                      {{format_plural "comment" comments.length}}</span></small></p>
              </div>

              <div class="card-footer text-muted row">
                <div class="col">
                  <i class="fas fa-calendar-alt"></i> {{format_date created_at}}
                </div>
                <div class="col">
                  <a href="/dashboard/edit/{{post.id}}" class="edit-link nav-link">Edit post</a>
                </div>
              </div>

            </div>
          </div>


        </div>
        {{/each}}
      </div>
    </div>
  </section>
  {{/if}}

</section>

<script src="/javascript/add-post.js"></script>