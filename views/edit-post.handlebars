<!-- Form to edit a post -->
<article class="justify-center mt-auto">
  <a class="text-light" href="/dashboard"> &larr; Back to dashboard</a>

  <div class="mt-3 mb-4">
    <h2>
      Edit Post
    </h2>
  </div>
  <form class="edit-post-form">
    <div>
      <input name="post-title" placeholder="Enter Post Title" type="text" value="{{post.title}}" />
      <span class="px-1">({{format_url post.post_url}})</span>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "Like" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a class="text-light" ref="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
        post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-link bg-light text-muted">Save post</button>
    <button type="button" class="btn delete-post-btn">Delete post</button>
  </form>
</article>

<!-- Form to add a comment -->
<form class="comment-form mb-3">
  <div class="mt-4">
    <textarea name="comment-body" placeholder="We'd love to hear from you"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<!-- Logic for page -->
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>